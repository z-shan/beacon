{
  "name": "beacon",
  "version": "1.0.0",
  "description": "Email tracker",
  "main": "app.js",
  "scripts": {
    "start-dev": "npm-run-all --parallel security-check lint:watch open:server",
    "start": "npm-run-all --parallel security-check run:server",
    "run:server": "node app.js",
    "open:server": "nodemon app.js",
    "lint": "esw -c .eslintrc src --color",
    "lint:watch": "npm run lint -- --watch",
    "security-check": "nsp check",
    "test": "ENV=test mocha tests/*.js --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/z-shan/beacon.git"
  },
  "author": "Zeeshan Ahmed",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/z-shan/beacon/issues"
  },
  "homepage": "https://github.com/z-shan/beacon#readme",
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "lodash": "^4.17.4",
    "mocha": "^4.0.1",
    "mocha-sinon": "^2.0.0",
    "mongoose": "^4.12.3",
    "npm-run-all": "^4.1.1",
    "should": "^13.1.2",
    "sinon": "^4.0.1",
    "supertest": "^3.0.0",
    "winston": "^0.8.1"
  },
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-watch": "^3.1.3",
    "nodemon": "^1.12.1"
  }
}
